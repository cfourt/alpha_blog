%p#notice= notice
.row.text-center
  .col
    =gravatar_for @user, size:150
.row.text-center.mt-5.mb-5
  .col
    %h2= @user.username
    %p= @user.email
    = link_to 'Edit', edit_user_path(@user), class: 'btn btn-outline-primary'
    = link_to 'Delete', user_path(@user), method: :delete, class: 'btn btn-outline-danger', data: {confirm: 'Are you sure you want to delete this user'} if logged_in? && current_user.admin?

=render 'articles/articles', articles: @user.articles